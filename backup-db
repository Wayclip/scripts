while ! pg_isready -h "$$PGHOST" -U "$$PGUSER"; do
  echo "Waiting for database..."
  sleep 2
done
echo "Database ready, starting backup loop..."
while true; do
  echo "Creating database backup..."
  pg_dump -U "$$PGUSER" -h "$$PGHOST" -Fc "$$PGDATABASE" > /backups/wayclip_db_backup_$(date +%Y-%m-%d_%H-%M-%S).dump
  echo "Backup complete. Waiting 24 hours."
  sleep 86400
done
